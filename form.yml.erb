  bc_num_slots: "1"

  num_cores:
    widget: "number_field"
    label: "Number of cores"
    value: 2
    help: |
      Number of cores.
    min: 0
    max: 36
    step: 1
    id: 'num_cores'
    required: true

  mem_req:
    label: "Memory required"
    help: "If no unit specified, Megabytes.  Can use 'k', 'M', 'G' suffixes.  NO DECIMALS.  Example: 3072M"
    widget: text_field
    value: "6000M"

  job_name:
    label: "Job name"
    help: "Name of job shown in queue"
    value: "RStudio"
    widget: text_field

  slurm_qos:
    label: "QOS"
    help: "Job QOS, only required for priority partitions"
    value: "400thread"
  <%- if qos.blank? -%>
    widget: text_field
  <%- else -%>
