# Batch Connect app configuration file
#
# @note Used to define the submitted cluster, title, description, and
#   hard-coded/user-defined attributes that make up this Batch Connect app.
---

# **MUST** set cluster id here that matches cluster configuration file located
# under /etc/ood/config/clusters.d/*.yml
# @example Use the Owens cluster at Ohio Supercomputer Center
#     cluster: "owens"
cluster: "ceres"

# Define attribute values that aren't meant to be modified by the user within
# the Dashboard form
attributes:

  version: 1.1.1.1
  slurm_account:
    widget: select
    label: "Account"
    options:
    <% `sacctmgr show -PQrn associations User=${USER} | cut -d '|' -f 2`.split("\n").each do |val| %>
      - ["<%= val %>", "<%= val %>"]
    <% end %>
    required: true

  # i would have named this partition, but that's got special meaning to ruby
  slurm_partition:
    value: ondemand
    widget: select
    label: "Slurm Partition"
    options:
      - [ "ondemand" , "ondemand" ]
    help: Jobs must run in the ondemand partition, which has a 24-hour time-limit
##    widget: select
#    label: "Partition"
#    help: |
#      - **speedy** - jobs that cannot be parallelized and require the fastest CPU
#      - **bigram** - jobs that cannot be parallelized and require a large amount of RAM
#      - **biocrunch** - jobs that do multithreaded computation
#      - **gpu** - jobs that run code that was compiled to run on a GPU
#    options:
#      - ["debug", "debug"]
#      - ["speedy", "speedy"]
#      - ["bigram", "bigram"]
#      - ["biocrunch", "biocrunch"]
#      - ["gpu", "gpu"]
    required: true

  bc_num_slots: "1"

  num_cores:
    widget: "number_field"
    label: "Number of cores"
    value: 2
    help: |
      Number of cores.
    min: 0
    max: 36
    step: 1
    id: 'num_cores'
    required: true

  mem_req:
    label: "Memory required"
    help: "If no unit specified, Megabytes.  Can use 'k', 'M', 'G' suffixes.  NO DECIMALS.  Example: 3072M"
    widget: text_field
    value: "6000M"

  job_name:
    label: "Job name"
    help: "Name of job shown in queue"
    value: "RStudio"
    widget: text_field


#  version:
#    widget: "select"
#    label: "R Version"
#    options:
#      - ["4.1.0", "4.1.0"]
#      - ["4.0.5", "4.0.5"]
#      - ["3.6.3", "3.6.3"]

# All of the attributes that make up the Dashboard form (in respective order),
# and made available to the submit configuration file and the template ERB
# files
#
# @note You typically do not need to modify this unless you want to add a new
#   configurable value
# @note If an attribute listed below is hard-coded above in the `attributes`
#   option, then it will not appear in the form page that the user sees in the
#   Dashboard
form:
  - slurm_account
  - slurm_partition
#  - version
  - bc_num_hours
  - bc_num_slots
  - num_cores
  - mem_req
  - job_name
